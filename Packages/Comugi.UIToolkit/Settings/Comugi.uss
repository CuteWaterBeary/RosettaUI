.comugi-window {
	min-width: 200px;
	min-height: 200px;
	background-color: rgba(45,45,45,0.9);
	position: absolute;
	border-radius: 1px;
	border-width: 4px;
}

.comugi-window__titlebar-container 
{
	flex-direction: row;
}

.comugi-window__titlebar-container__right
{
	align-content: flex-end;
	margin-left: auto;
}

.comugi-closebutton {
	background-color: transparent;
	border-width: 0;
	border-radius: 0;
	align-self: flex-end;
}