/********************************************************************************
* Window Element
********************************************************************************/

.rosettaui-window 
{
	min-width: 400px;
	min-height: 200px;
	background-color: rgba(45,45,45,0.9);
	position: absolute;
	border-radius: 1px;
	border-width: 4px;
	padding-left: 15px;
}

.rosettaui-window__titlebar-container 
{
	flex-direction: row;
}

.rosettaui-window__titlebar-container__right
{
	align-content: flex-end;
	margin-left: auto;
}

.rosettaui-closebutton 
{
	background-color: transparent;
	border-width: 0;
	border-radius: 0;
	align-self: flex-end;
}


.rosettaui-row
{
	flex-direction: row;
	flex: 0 0 auto;
}

.rosettaui-row__contents
{
	margin: 0px;
}

.rosettaui-row__contents > .unity-base-field__label
{
	min-width: 15px;
	margin-left: 3px;
	margin-right: 0px;
	flex: 0 0 auto;
}

.rosettaui-row__contents > .unity-base-field__input
{
	min-width: 105px;
	flex: 0 0 auto;
}

.rosettaui-row__contents--first > .unity-base-field__label
{
	margin-left: 0px;
	margin-right: 0px;
	padding-left: 1px;
}

